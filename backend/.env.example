# Environment variables
NODE_ENV=development
PORT=3000

# Database (NeonDB)
DATABASE_URL="postgresql://username:password@host:5432/database_name?sslmode=require"

# Supabase
SUPABASE_URL="your-supabase-url"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-key"

# JWT
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="24h"

# API Keys
NIN_API_URL="https://api.nin.gov.ng"
NIN_API_KEY="your-nin-api-key"

# External Services
NOTIFICATION_SERVICE_URL="https://api.notifications.com"
NOTIFICATION_API_KEY="your-notification-api-key"

# CORS
CORS_ORIGIN="exp://localhost:19000,http://localhost:19006"

# File Upload
MAX_FILE_SIZE="5mb"
UPLOAD_PATH="./uploads"
